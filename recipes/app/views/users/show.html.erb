<h1>Welcome <%= @user.username %></h1>

<br><br>

<h3>Your Recipes</h3>

<br><br>

<% @user.recipes.each do |recipe| %>
  <p><%= link_to recipe.name, user_recipe_path(recipe) %></p>
<% end %>

<br><br>

<%= link_to "Add a new recipe", new_user_recipe_path(@user) %>

<br><br>

<% @user.ingredients.each do |ingredient| %>
  <p><%= link_to ingredient.name, user_ingredient_path(ingredient) %></p>
<% end %>

<br><br>

<%= link_to "Add a new ingredient", new_user_ingredient_path %>

<br><br>

<%= link_to "Log Out", logout_path %>
