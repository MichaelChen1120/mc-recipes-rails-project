<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each_with_index do |review, i| %>
        <h3><%= "#{i+1}. " %> <%= link_to review.recipe.name, review %></h3>
        <%= link_to 'Edit', edit_user_review_path(@user, review) %><br>
        <%= link_to 'Delete', user_review_path(@user, review), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', user_path(@user) %>
