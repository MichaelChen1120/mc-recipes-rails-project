<%= form_for([@user, @recipe]) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <br>

  <%= f.label :ingredients %>
  <%= hidden_field_tag "recipe[ingredient_ids][]", nil %>
  <% Ingredient.all.each do |ingredient| %>
    <%= check_box_tag "recipe[ingredient_ids][]", ingredient.id, @recipe.ingredients.include?(ingredient), id: dom_id(ingredient, dom_id(@recipe)) %>
    <%= label_tag dom_id(ingredient, dom_id(@recipe)), ingredient.name %><br>
  <% end %>
  <br>
  <%= link_to "Add a new ingredient", new_ingredient_path %>

  <br><br>

  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
