<fieldset>
  <%= f.label :name, "Ingredient name" %>
  <%= f.text_field :name %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Remove ingredient", "#", class: "remove_fields" %><br><br>
  <%= f.fields_for :recipe_ingredients do |r| %>
    <%= r.label :quantity %>
    <%= r.text_field :quantity %>
    <%= r.hidden_field :_destroy %>
  <% end %>
</fieldset>
